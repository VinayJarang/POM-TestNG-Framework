package Assignments;

import java.util.concurrent.TimeUnit;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.interactions.Actions;
import org.openqa.selenium.support.ui.Select;

import DriverInitialise.InitFirefox;

public class ScnOneFirefox {

	public static void main(String[] args) throws InterruptedException {
		WebDriver aDriver = new InitFirefox().init();

		aDriver.manage().timeouts().implicitlyWait(10, TimeUnit.SECONDS);

		aDriver.get("https://book.spicejet.com/");

		Thread.sleep(10000);

		Actions action = new Actions(aDriver);
		action.moveToElement(aDriver.findElement(By.xpath("//a[@id='Login']"))).build().perform();
		// Thread.sleep(1000);
		action.moveToElement(aDriver.findElement(By.xpath("//a[text()='SpiceClub Members']"))).build().perform();
		// Thread.sleep(10000);
		action.moveToElement(aDriver.findElement(By.xpath("//a[text()='Sign up']"))).build().perform();
		aDriver.findElement(By.xpath("//a[text()='Sign up']")).click();
		// Thread.sleep(1000);
		String locator = "CONTROLGROUPREGISTERVIEW_PersonInputRegisterView";
		Select select = new Select(aDriver.findElement(By.id(locator + "_DropDownListTitle")));
		select.selectByIndex(1);

		aDriver.findElement(By.id(locator + "_TextBoxFirstName")).sendKeys("Vinay");
		aDriver.findElement(By.id(locator + "_TextBoxLastName")).sendKeys("Kumar");
		aDriver.findElement(By.id(locator + "_TEXTBOXINTLMOBILENUMBER")).sendKeys("9343144375");

		aDriver.findElement(By.id("CONTROLGROUPREGISTERVIEW_MemberInputRegisterView_PasswordFieldAgentPassword"))
				.sendKeys("Pass@1234567890");
		aDriver.findElement(By.id("CONTROLGROUPREGISTERVIEW_MemberInputRegisterView_PasswordFieldPasswordConfirm"))
				.sendKeys("Pass@1234567890");

		aDriver.findElement(By.id(locator + "_TEXTBOXINPUTDOB")).click();
		aDriver.findElement(By.xpath("//*[span='1997']")).click();
		aDriver.findElement(By.xpath("//*[span='Jan']")).click();
		aDriver.findElement(By.xpath("//*[span='15']")).click();
		aDriver.findElement(By
				.xpath("//input[@type='text' and @id='CONTROLGROUPREGISTERVIEW_PersonInputRegisterView_TextBoxEmail']"))
				.sendKeys("abc@gamil.com");

		aDriver.findElement(By.id("chkSpiceClubTnC")).click();
		aDriver.findElement(By.xpath("//*[@value='Submit']")).click();

	}

}
