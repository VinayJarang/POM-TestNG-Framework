package Calender;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.ui.ExpectedConditions;
import org.openqa.selenium.support.ui.WebDriverWait;

import DriverInitialise.InitChrome;

public class DatePicker {

	static WebDriver aDriver = new InitChrome().init();

	public static void main(String[] args) {

		aDriver.get("http://seleniumpractise.blogspot.com/2016/08/how-to-handle-calendar-in-selenium.html");
		aDriver.findElement(By.id("datepicker")).click();
		WebElement calender = aDriver.findElement(By.id("ui-datepicker-div"));
		new WebDriverWait(aDriver, 5).until(ExpectedConditions.visibilityOf(calender));

		selectDate("15", "December", "2021");
	}

	public static void selectDate(String day, String month, String year) {
		if ((Integer.parseInt(day) > 31) || (month.equals("February") && Integer.parseInt(day) > 29)) {
			System.out.println("Incorrect Date");
		}
		String monthYear = aDriver.findElement(By.className("ui-datepicker-title")).getText();
		while (!(getMonthAndYear(monthYear)[0].equals(month) && getMonthAndYear(monthYear)[1].equals(year))) {
			aDriver.findElement(By.xpath("//span[@class='ui-icon ui-icon-circle-triangle-e']")).click();
			monthYear = aDriver.findElement(By.className("ui-datepicker-title")).getText();
		}
		aDriver.findElement(By.xpath("//a[text()='" + day + "']")).click();
	}

	public static String[] getMonthAndYear(String monthYear) {
		return monthYear.split(" ");
	}
}
